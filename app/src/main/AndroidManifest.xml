<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.eightfoldpath.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NowPlayingActivity"
            android:label="@string/now_playing" />
        <activity android:name=".ArtistActivity"
            android:label="@string/artists"/>
        <activity android:name=".AlbumActivity"
            android:label="@string/albums"/>
        <activity android:name=".SongActivity"
            android:label="@string/songs"/>
        <activity android:name=".MusicStoreActivity"
            android:label="@string/music_store"/>
    </application>

</manifest>